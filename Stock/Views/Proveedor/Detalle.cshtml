@model Stock.Models.OrdenDetalleViewModel

<div class="container mt-4">
    <div class="card shadow p-4">
        <h3 class="mb-4">Detalle de la Orden #@Model.IdOrden</h3>



        @if (Model != null)
        {
            <div class="row mb-4">
                <div class="col-md-6">
                    <p><strong>Fecha de Creación:</strong> @Model.Fecha.ToShortDateString()</p>
                    <p><strong>Proveedor ID:</strong> @Model.IdProveedor</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Estado:</strong> <span class="badge bg-primary">@Model.Estado</span></p>
                    <p><strong>Total Estimado:</strong> $@Model.Total.ToString("N2")</p>
                </div>
            </div>

            <hr />

            <h4>Productos Solicitados</h4>

            @if (Model.Items != null && Model.Items.Any())
            {
                <table class="table table-striped table-bordered mt-3">
                    <thead>
                        <tr>
                            <th>ID Producto</th>
                            <th>Nombre</th>
                            <th>Cantidad</th>
                            <th>Precio Unitario</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.IdProducto</td>
                                <td>@item.NombreProducto</td>
                                <td>@item.Cantidad</td>
                                <td>$@item.PrecioUnitario.ToString("N2")</td>
                                <td>$@(item.Cantidad* item.PrecioUnitario).ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning mt-3">
                    Esta orden no tiene productos registrados o no se pudo cargar la información.
                </div>
            }

            <div class="mt-4 text-end">
                <a class="btn btn-secondary" asp-action="OrdenesRecibidas">
                    Volver al Listado
                </a>
                @if (Model.Estado == "Pendiente")
                {
                    <a class="btn btn-success"
                       href="#"
                       onclick="return confirmarEnvioSimple(@Model.IdOrden)">
                        Confirmar Envío
                    </a>
                }
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                No se pudo cargar la información del detalle de la orden.
            </div>
        }

        <div class="row mb-4">
            <div class="col-md-6">
                <p><strong>Fecha de Creación:</strong> @Model.Fecha.ToShortDateString()</p>
                <p><strong>Proveedor ID:</strong> @Model.IdProveedor</p>
            </div>
            <div class="col-md-6">
                <p><strong>Estado:</strong> <span class="badge bg-primary">@Model.Estado</span></p>
                <p><strong>Total Estimado:</strong> $@Model.Total.ToString("N2")</p>
            </div>
        </div>

        <hr />

        <h4>Productos Solicitados</h4>
        <table class="table table-striped table-bordered mt-3">
            <thead>
                <tr>
                    <th>ID Producto</th>
                    <th>Nombre</th>
                    <th>Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.IdProducto</td>
                        <td>@item.NombreProducto</td>
                        <td>@item.Cantidad</td>
                        <td>$@item.PrecioUnitario.ToString("N2")</td>
                        <td>$@(item.Cantidad* item.PrecioUnitario).ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-4 text-end">
            <a class="btn btn-secondary" asp-action="OrdenesRecibidas">
                Volver al Listado
            </a>
            @if (Model.Estado == "Pendiente")
            {
                <a class="btn btn-success"
                   href="#"
                   onclick="return confirmarEnvioSimple(@Model.IdOrden)">
                    Confirmar Envío
                </a>
            }
        </div>

    </div>
</div>

<script>
    function confirmarEnvioSimple(idOrden) {
        if (confirm('¿Estás seguro de que deseas confirmar el envío de la Orden #' + idOrden + '?')) {

            window.location.href = '@Url.Action("ConfirmarEnvio", "Proveedor")' + '?idOrden=' + idOrden;
            return true;
        }
        return false;
    }
</script>