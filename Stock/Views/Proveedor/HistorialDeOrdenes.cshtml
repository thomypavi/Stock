@model IEnumerable<Stock.Models.OrdenDeCompra>

@{
    ViewData["Title"] = "Historial de Órdenes Enviadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><i class="fas fa-history"></i> Historial de Órdenes Enviadas</h1>
<p class="text-muted">Aquí se muestran todas las órdenes que ya fueron confirmadas y enviadas al cliente.</p>
<hr />


@if (Model == null || !Model.Any())

    @if (!Model.Any())

    {
        <div class="alert alert-info" role="alert">
            Actualmente no hay órdenes con el estado 'Enviada' para mostrar en el historial.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdOrden)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdOrden)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha)
                        </td>
                        <td>
                            {{-- Muestra el estado con un estilo visual para indicar que está procesada --}}
                            <span class="badge bg-success">@Html.DisplayFor(modelItem => item.Estado)</span>
                        </td>
                        <td>
                            <a asp-controller="Proveedor" asp-action="Detalle" asp-route-id="@item.IdOrden" class="btn btn-info btn-sm">Ver Detalle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }