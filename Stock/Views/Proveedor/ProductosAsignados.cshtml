@model List<Stock.Models.Producto>

<div class="container mt-5">
    <h2>📦 Productos Asignados para Suministro</h2>
    <p class="mb-4 text-muted">Listado de productos que puedes proveer.</p>

    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID Producto</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio Actual</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var producto in Model)
                {
                    <tr>
                        <td>@producto.Id</td>
                        <td>@producto.Nombre</td>
                        <td>@producto.Descripcion</td>
                        <td>$@producto.Precio.ToString("N2")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-danger">No hay productos asignados.</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4">
        <a class="btn btn-secondary" asp-controller="Proveedor" asp-action="OrdenesRecibidas">
            Volver a Órdenes
        </a>
    </div>
</div>