@using Microsoft.AspNetCore.Identity // Necesario para usar User.Identity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stock</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Stock.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Stock</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {

                            // INICIO: ENLACES DEL MÓDULO PROVEEDOR (SOLO SI ESTÁ LOGUEADO)

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Panel Proveedor
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="Proveedor" asp-action="OrdenesRecibidas">Órdenes Pendientes</a></li>
                                    <li><a class="dropdown-item" asp-controller="Proveedor" asp-action="HistorialDeOrdenes">Historial de Órdenes</a></li>
                                    <li><hr class="dropdown-divider"></li>

                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Productos"
                                           asp-action="Crear"
                                           asp-route-idProveedor="@User.FindFirst("IdUsuario")?.Value">
                                            ➕ Agregar Producto
                                        </a>
                                    </li>

                                    <li><a class="dropdown-item" asp-controller="Proveedor" asp-action="ProductosAsignados">Ver Productos Asignados</a></li>
                                    <li><a class="dropdown-item" asp-controller="Proveedor" asp-action="EditarInformacion">Editar Datos</a></li>
                                </ul>
                            </li>

                            // FIN: ENLACES DEL MÓDULO PROVEEDOR

                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {

                            // OPCIÓN DE CERRAR SESIÓN (Logout) - Botón POST por seguridad

                            <li class="nav-item">
                                <form asp-controller="Login" asp-action="CerrarSesion" method="post" class="nav-link p-0">
                                    <button type="submit" class="btn btn-link nav-link text-danger">
                                        Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {

                            // OPCIÓN DE INICIAR SESIÓN (Si no está logueado)

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Login" asp-action="Index">Iniciar Sesión</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Stock - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>