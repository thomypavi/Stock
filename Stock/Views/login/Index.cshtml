@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width: 450px;">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
            <h2 class="text-center mb-4 text-primary fw-bold">Iniciar Sesión</h2>

            <form method="post" action="/Login/IniciarSesion">
                <div class="mb-3">
                    <label for="email" class="form-label fw-semibold">Correo electrónico</label>
                    <input type="email" name="email" id="email" class="form-control form-control-lg" placeholder="usuario@ejemplo.com" />
                </div>

                <div class="mb-3">
                    <label for="contraseña" class="form-label fw-semibold">Contraseña</label>
                    <input type="password" name="contraseña" id="contraseña" class="form-control form-control-lg" placeholder="••••••••" />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Iniciar Sesión</button>
                </div>
            </form>

            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
            {
                <div class="alert alert-danger text-center mt-3" role="alert">
                    @ViewData["ErrorMessage"]
                </div>
            }

            <div class="text-center mt-4">
                <p class="mb-0">
                    ¿No tenés cuenta?
                    <a asp-controller="Login" asp-action="Register" class="text-decoration-none fw-semibold text-primary">
                        Registrate aquí
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>
