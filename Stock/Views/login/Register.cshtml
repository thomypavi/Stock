@model Stock.Models.Usuario

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
            <h2 class="text-center mb-4 text-primary fw-bold">Registro de Usuario</h2>

            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold">Correo electrónico</label>
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="usuario@ejemplo.com" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Contraseña" class="form-label fw-semibold">Contraseña</label>
                    <input asp-for="Contraseña" type="password" class="form-control form-control-lg" placeholder="••••••••" required />
                </div>

                <div class="mb-3">
                    <label asp-for="TipoUsuario" class="form-label fw-semibold">Tipo de usuario</label>
                    <select asp-for="TipoUsuario" class="form-select form-select-lg" required>
                        <option value="" disabled selected>Seleccione un rol</option>
                        <option value="Proveedor"> provedor </option>
                        <option value="Administrativo">Administrativo</option>
                    </select>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Registrar</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <p class="mb-0">
                    ¿Ya tienes cuenta?
                    <a asp-controller="Login" asp-action="Index" class="text-decoration-none fw-semibold text-primary">
                        Inicia sesión aquí
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>



